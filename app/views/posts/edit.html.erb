<%= form_tag post_path(@post), method: "patch" do %>

<% if @post.errors.any? %>
    <h2>There were some errors:</h2>
    <ul id="error_explanation">
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %> 

  <div class="field<%= ' field_with_errors' if @post.errors[:title].any? %>">
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title", @post.title %>
  </div>

    <div class="field<%= ' field_with_errors' if @post.errors[:content].any? %>">
    <%= label_tag "content", "Content" %>
    <%= text_area_tag "content", @post.content %>
  </div>

  <div class="field<%= ' field_with_errors' if @post.errors[:destination_id].any? %>">
    <%= label_tag "destination_id", "Destination" %>
    <%= select_tag "destination_id", options_from_collection_for_select(Destination.all, "id", "name") %>
  </div>

    <div class="field<%= ' field_with_errors' if @post.errors[:blogger_id].any? %>">
    <%= label_tag "blogger_id", "Blogger" %>
    <%= select_tag "blogger_id", options_from_collection_for_select(Blogger.all, "id", "name") %>
  </div>

  <%= submit_tag "Create" %>
<% end %> 